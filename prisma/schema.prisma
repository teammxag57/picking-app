generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Tabela existente: sessões da Shopify
model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

// Nova tabela: itens pickados
model PickedItem {
  id        Int     @id @default(autoincrement())
  orderId   String
  variantId String
  picked    Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([orderId, variantId])
}

// Nova tabela: bins (localizações físicas)
model BinLocation {
  id        String   @id @default(cuid())
  shopId    String   // usar o shop domain (session.shop)
  code      String   // código lido no barcode do bin
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  variants  VariantBin[]

  @@unique([shopId, code])
  @@index([shopId])
}

// Nova tabela: associação Variant -> Bin (1 bin por variant)
model VariantBin {
  id            String      @id @default(cuid())
  shopId        String
  variantGid    String      // gid://shopify/ProductVariant/...
  binLocationId String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  bin           BinLocation @relation(fields: [binLocationId], references: [id], onDelete: Cascade)

  @@unique([shopId, variantGid])
  @@index([shopId])
  @@index([binLocationId])
}

